<main class="card-panel z-depth-2">
  <div class="row">
    <form class="col s12" action="/send" method="POST">
      {{!-- first name last name input boxes --}}
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="first_name" type="text" class="validate">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <input id="last_name" type="text" class="validate">
          <label for="last_name">Last Name</label>
        </div>
      </div>
      {{!-- email input --}}
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">email</i>
          <input id="email" type="email" class="validate">
          <label for="email" data-error="Please enter a valid email address." data-success="Correct">Email</label>
        </div>
      </div>
      {{!-- subject line --}}
      <div class ="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">label</i>
          <input id="subject" type="text">
          <label for="subject">Subject</label>
        </div>
      </div>
      {{!-- message text box --}}
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">mode_edit</i>
          <textarea id="textarea1" class="materialize-textarea" data-length="255"></textarea>
          <label for="textarea1">Message</label>
        </div>
      </div>
      {{!-- send button --}}
      <button class="btn waves-effect waves-light right" type="submit" name="action">Send<i class="material-icons right">send</i></button>
    </form>
  </div>
</main>
