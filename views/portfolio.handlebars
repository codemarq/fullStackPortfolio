<main>
<div class="row">
  {{#each project}}
  <div class="col s12 m6 l4">
    <div class="card medium sticky-action z-depth-2">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="responsive-img activator" src="{{this.imageUrl}}" alt="{{this.altText}}">
      </div>
      <div class="card-content">
        <span class="card-title activator black-text text-darken-4">
          <h5>
            {{ this.name }}<i class="material-icons right">info</i>
          </h5>
        </span>
      </div>
      <div class="card-action">
        <a href="{{this.gitUrl}}" class="">
          <img src="/public/assets/img/icons/GitHub-Mark-32px.png" alt="Github link"/>
        </a>

        {{#if this.herokuUrl}}
          <a href="{{this.herokuUrl}}" class="right">
            <i class="material-icons small blue-text text-darken-2">play_circle_filled</i>
          </a>
        {{/if}}
      </div>
      <div class="card-reveal">
        <span class="card-title">{{ this.name }}<i class="material-icons right">close</i></span>
        <p>{{this.description}}</p>
      </div>
    </div>
  </div>
  {{/each}}
  </div>
</main>
